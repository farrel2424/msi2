# Motorsights EPC - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== SUMOPOD (AI Gateway) =====
# Universal AI Gateway for all LLM requests
SUMOPOD_BASE_URL=https://ai.sumopod.com/v1
SUMOPOD_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxx
SUMOPOD_MODEL=gpt4o
SUMOPOD_TEMPERATURE=0.7
SUMOPOD_MAX_TOKENS=2000
# Available models: gpt-4o, gpt-4.1, claude-3-sonnet

# ===== MOTORSIGHTS EPC API =====
# Development API endpoint
EPC_API_BASE_URL=https://dev-epc.motorsights.com
EPC_BEARER_TOKEN=your-epc-bearer-token-here

# ===== REQUIRED: Master Category UUID =====
# CRITICAL: This is now REQUIRED for the EPC API
# Format: UUID string
# Get this UUID from your mentor or EPC admin
DEFAULT_MASTER_CATEGORY_ID=

# ===== PROCESSING OPTIONS =====
# Max retries for validation and API submission
MAX_RETRIES=3

# Enable manual review before submission
ENABLE_REVIEW_MODE=true

# ===== LOGGING =====
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO